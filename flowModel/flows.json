[ 
    {
        "name": "Bent Sports Padel Robot",
        "id": "bent-sports-padel-robot",
        "type": "robot",
        "url": "https://bent.baanreserveren.nl/reservations",
        "bookingThreshold": 3,
        "steps": [
            {
                "name": "login",
                "actions": [
                    {
                        "type": "input",
                        "key": "email",
                        "selector": "input[type='email']"
                    },
                    {
                        "type": "input",
                        "key": "password",
                        "selector": "input[type='password']"
                    },
                    {
                        "type": "click",
                        "key": "loginSubmit",
                        "selector": ".button3",
                        "waitSelector": "#matrix-sport"
                    }
                ]
            },
            {
                "name": "select sport",
                "actions": [
                    {
                        "type": "select",
                        "key": "sportSelect",
                        "selector": "#matrix-sport"
                    }
                ]
            },
            {
                "name": "select date",
                "actions": [
                    {
                        "type": "click",
                        "key": "dateSelect",
                        "selector": "#cal_{convertDateToRequiredFormat} a",
                        "format": "YYYY_MM_DD",
                        "delay": 1000
                    }
                ]
            },
            {
                "name": "select court and time",
                "actions": [
                    {
                        "type": "click",
                        "key": "timeCourtSelect",
                        "selector": "tr[data-time=\"{getBookingTime}\"] [title=\"Padel Buiten {getBookingCourt}\"]",
                        "waitSelector": ".lightbox"
                    }
                ]
            }
        ]
    }
]